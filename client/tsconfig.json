{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "module": "NodeNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["src/Main/*"]
    }
  },
  "include": ["src/**/*"]
}
